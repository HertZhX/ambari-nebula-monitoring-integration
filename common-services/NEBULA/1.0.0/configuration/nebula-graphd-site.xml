<configuration>
  
  <property>
    <name>port</name>
    <display-name>Graphd Service Port</display-name>
    <value>9669</value>
    <description>Graphd服务端口，客户端连接使用</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ws_http_port</name>
    <display-name>Graphd HTTP Port</display-name>
    <value>19669</value>
    <description>Graphd HTTP管理端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ws_h2_port</name>
    <display-name>Graphd HTTP/2 Port</display-name>
    <value>19670</value>
    <description>Graphd HTTP/2管理端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>num_netio_threads</name>
    <display-name>Network IO Threads</display-name>
    <value>4</value>
    <description>网络IO线程数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>32</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>num_accept_threads</name>
    <display-name>Accept Threads</display-name>
    <value>1</value>
    <description>连接接受线程数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>16</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>num_worker_threads</name>
    <display-name>Worker Threads</display-name>
    <value>4</value>
    <description>工作线程数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>32</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>client_idle_timeout_secs</name>
    <display-name>Client Idle Timeout</display-name>
    <value>28800</value>
    <description>客户端连接空闲超时时间（秒）</description>
    <value-attributes>
      <type>int</type>
      <minimum>60</minimum>
      <maximum>86400</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>session_idle_timeout_secs</name>
    <display-name>Session Idle Timeout</display-name>
    <value>28800</value>
    <description>会话空闲超时时间（秒）</description>
    <value-attributes>
      <type>int</type>
      <minimum>60</minimum>
      <maximum>86400</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>enable_authorize</name>
    <display-name>Enable Authorization</display-name>
    <value>false</value>
    <description>是否启用权限控制</description>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>auth_type</name>
    <display-name>Authentication Type</display-name>
    <value>password</value>
    <description>认证类型</description>
    <value-attributes>
      <entries>
        <entry>
          <value>password</value>
          <label>Password</label>
        </entry>
        <entry>
          <value>ldap</value>
          <label>LDAP</label>
        </entry>
        <entry>
          <value>cloud</value>
          <label>Cloud</label>
        </entry>
      </entries>
      <selection-cardinality>1</selection-cardinality>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property require-input="true">
    <name>meta_server_addrs</name>
    <display-name>Metad Server Addresses</display-name>
    <value>{{metad_hosts_with_port}}</value>
    <description>Metad服务器地址列表，格式: host1:port,host2:port</description>
    <value-attributes>
      <empty-value-valid>false</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>local_config</name>
    <display-name>Local Config</display-name>
    <value>true</value>
    <description>是否使用本地配置文件</description>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>log_level</name>
    <display-name>Log Level</display-name>
    <value>INFO</value>
    <description>日志级别</description>
    <value-attributes>
      <entries>
        <entry>
          <value>DEBUG</value>
          <label>DEBUG</label>
        </entry>
        <entry>
          <value>INFO</value>
          <label>INFO</label>
        </entry>
        <entry>
          <value>WARN</value>
          <label>WARN</label>
        </entry>
        <entry>
          <value>ERROR</value>
          <label>ERROR</label>
        </entry>
        <entry>
          <value>FATAL</value>
          <label>FATAL</label>
        </entry>
      </entries>
      <selection-cardinality>1</selection-cardinality>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>max_allowed_connections</name>
    <display-name>Max Allowed Connections</display-name>
    <value>1000</value>
    <description>最大允许连接数</description>
    <value-attributes>
      <type>int</type>
      <minimum>100</minimum>
      <maximum>10000</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>