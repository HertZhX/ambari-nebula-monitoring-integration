<configuration>
  
  <property>
    <name>port</name>
    <display-name>Metad Service Port</display-name>
    <value>9559</value>
    <description>Metad服务端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ws_http_port</name>
    <display-name>Metad HTTP Port</display-name>
    <value>19559</value>
    <description>Metad HTTP管理端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ws_h2_port</name>
    <display-name>Metad HTTP/2 Port</display-name>
    <value>19560</value>
    <description>Metad HTTP/2管理端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>data_path</name>
    <display-name>Metad Data Path</display-name>
    <value>/var/lib/nebula/meta</value>
    <description>Metad数据存储路径</description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>local_config</name>
    <display-name>Local Config</display-name>
    <value>true</value>
    <description>是否使用本地配置文件</description>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>heartbeat_interval_secs</name>
    <display-name>Heartbeat Interval</display-name>
    <value>10</value>
    <description>心跳间隔时间（秒）</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>300</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>num_io_threads</name>
    <display-name>IO Threads</display-name>
    <value>16</value>
    <description>IO线程数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>64</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>num_worker_threads</name>
    <display-name>Worker Threads</display-name>
    <value>32</value>
    <description>工作线程数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>128</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>log_level</name>
    <display-name>Log Level</display-name>
    <value>INFO</value>
    <description>日志级别</description>
    <value-attributes>
      <entries>
        <entry>
          <value>DEBUG</value>
          <label>DEBUG</label>
        </entry>
        <entry>
          <value>INFO</value>
          <label>INFO</label>
        </entry>
        <entry>
          <value>WARN</value>
          <label>WARN</label>
        </entry>
        <entry>
          <value>ERROR</value>
          <label>ERROR</label>
        </entry>
        <entry>
          <value>FATAL</value>
          <label>FATAL</label>
        </entry>
      </entries>
      <selection-cardinality>1</selection-cardinality>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>part_man_type</name>
    <display-name>Partition Management Type</display-name>
    <value>memory</value>
    <description>分区管理类型</description>
    <value-attributes>
      <entries>
        <entry>
          <value>memory</value>
          <label>Memory</label>
        </entry>
        <entry>
          <value>meta</value>
          <label>Meta</label>
        </entry>
      </entries>
      <selection-cardinality>1</selection-cardinality>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>default_parts_num</name>
    <display-name>Default Partitions Number</display-name>
    <value>100</value>
    <description>默认分区数量</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>32768</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>default_replica_factor</name>
    <display-name>Default Replica Factor</display-name>
    <value>1</value>
    <description>默认副本因子</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>5</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>agent_heartbeat_interval_secs</name>
    <display-name>Agent Heartbeat Interval</display-name>
    <value>60</value>
    <description>Agent心跳间隔时间（秒）</description>
    <value-attributes>
      <type>int</type>
      <minimum>10</minimum>
      <maximum>600</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>cluster_id</name>
    <display-name>Cluster ID</display-name>
    <value>1</value>
    <description>集群ID，集群唯一标识</description>
    <value-attributes>
      <type>int</type>
      <minimum>1</minimum>
      <maximum>2147483647</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ws_meta_http_port</name>
    <display-name>Meta WebService HTTP Port</display-name>
    <value>19560</value>
    <description>Meta WebService HTTP端口</description>
    <value-attributes>
      <type>int</type>
      <minimum>1024</minimum>
      <maximum>65535</maximum>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>